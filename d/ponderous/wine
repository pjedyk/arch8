# enable multilib !
pacman -S -- wine-staging xorg-xhost
pacman -S --asdeps -- \
    lib32-alsa-lib lib32-libpulse lib32-jack \
    lib32-giflib lib32-libldap lib32-gnutls lib32-mpg123 openal lib32-openal \
    lib32-v4l-utils lib32-libpulse lib32-alsa-plugins lib32-alsa-lib \
    lib32-libxcomposite lib32-libxinerama libxslt lib32-libxslt lib32-libva \
    lib32-gtk3 lib32-gst-plugins-base-libs lib32-vulkan-icd-loader \
    vkd3d lib32-vkd3d \
  ;

../../22-newuser
# wineuser
# Wine User
# *******
# *******
./arch8/21-user
# Ctrl+D
usermod -a -Gbumblebee -- wineuser

cat <<EOF >~/bin/wineuser
#! /bin/bash --

xhost +SI:localuser:wineuser &&
exec -- su -wDISPLAY - wineuser
EOF

chmod +x -- ~/bin/wineuser

wineuser
# *******
winecfg
# Ctrl+D

# -A OUTPUT -m owner --uid-owner wineuser -j DROP
# to: /etc/iptables/iptables.rules
# to: /etc/iptables/ip6tables.rules
systemctl -- enable iptables.service
systemctl -- start iptables.service
systemctl -- enable ip6tables.service
systemctl -- start ip6tables.service
